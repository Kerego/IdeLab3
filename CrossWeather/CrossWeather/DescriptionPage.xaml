<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossWeather.DescriptionPage">
  		<StackLayout x:Name ="stack">
		  <Button x:Name = "geoButton" Text = "Get location"/>
		  <Label x:Name = "city" FontSize = "35" />
		  <Label x:Name = "overallWeather" FontSize = "35" />
		  <Label x:Name = "wind" FontSize = "35" />
		  <Label x:Name = "longitude" FontSize = "35" />
		  <Label x:Name = "latitude" FontSize = "35" />
		  <Image x:Name = "image" Source = "arrow.png" WidthRequest = "100" HeightRequest = "100" />
  		</StackLayout>
	  
</ContentPage>